<div class="container">
  <header class="header">
    <h1 class="logo"><span class="highlight-text">TechCrunch</span> Scraper</h1>
    <nav class="nav">
      <ul>
        <li><a href="/" {{#if homeActive}}class="highlight-text"{{/if}}>Home</a></li>
        <li><a href="/commented" {{#if commentedActive}}class="highlight-text"{{/if}}>Commented</a></li>
        <li><a href="/scrape" class="btn-scrape">Scrape</a></li>
      </ul>
    </nav>
  </header>

  <main class="news-grid">
    {{#each dbArticles}}
    <div class="card">
      <a href="{{link}}" target="_blank">
        <img src="{{image}}" alt="News image">
      </a>
      <div class="card-content">
        <h2>{{title}} <a href="{{link}}" target="_blank"><i class="fas fa-external-link-alt"></i></a></h2>
        <p>{{summary}}... <cite>&mdash; {{author}}</cite></p>
        <button class="btn btn-primary btn-comment" data-article="{{_id}}"><i class="fas fa-comments"></i> Comment</button>
      </div>
    </div>
    {{/each}}
  </main>

  <div class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="article-title"></h3>
        <span class="close"><i class="fas fa-times"></i></span>
      </div>
      <form class="comment-form">
        <label for="author">Name</label>
        <input type="text" id="author" placeholder="Enter your name..." required>

        <label for="comment">Comment</label>
        <textarea id="comment" placeholder="Enter a comment..." required></textarea>

        <button class="btn btn-primary"><i class="fas fa-comments"></i> Comment</button>
      </form>
      <div class="comments"></div>
    </div>
  </div>
</div>

